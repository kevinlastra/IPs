

%.pdf : %.tex
	echo $@
	pdflatex $<

.PHONY: clean
clean : 
	rm -f ./*.aux
	rm -f ./*.dvi
	rm -f ./*.log
	rm -f ./*.out
	rm -f ./*.toc

.PHONY: help
help : 
	@echo "<file>.pdf : Using <file>.tex build <file>.pdf"
	@echo "clean      : Delete all files generated by pdflatex"
	@echo "             exept for <file>.tex and <file>.pdf"
	@echo "help       : Display this message"
